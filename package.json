{
	"name": "svelte-overlay",
	"version": "1.4.1",
	"description": "Svelte Overlay component. Great for creating dropdowns, tooltips and popovers",
	"author": "Mariusz Wachowski",
	"keywords": [
		"svelte",
		"overlay",
		"select",
		"dropdown",
		"tooltip",
		"popover"
	],
	"license": "MIT",
	"repository": "https://github.com/wysher/svelte-overlay.git",
	"devDependencies": {
		"@babel/core": "7.14.0",
		"@babel/plugin-syntax-dynamic-import": "7.8.3",
		"@babel/plugin-transform-runtime": "7.13.15",
		"@babel/preset-env": "7.14.0",
		"@rollup/plugin-typescript": "8.2.1",
		"@testing-library/cypress": "7.0.6",
		"@tsconfig/svelte": "1.0.10",
		"@typescript-eslint/eslint-plugin": "4.22.0",
		"@typescript-eslint/parser": "4.22.0",
		"autoprefixer": "10.2.5",
		"cypress": "7.2.0",
		"dotenv": "8.2.0",
		"eslint": "7.25.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-cypress": "2.11.2",
		"eslint-plugin-svelte3": "3.2.0",
		"husky": "^4.2.5",
		"lint-staged": "10.5.4",
		"postcss": "8.2.13",
		"postcss-load-config": "3.0.1",
		"prettier": "2.2.1",
		"rollup": "2.46.0",
		"rollup-plugin-babel": "4.4.0",
		"rollup-plugin-commonjs": "10.1.0",
		"rollup-plugin-css-only": "3.1.0",
		"rollup-plugin-livereload": "2.0.0",
		"rollup-plugin-node-resolve": "5.2.0",
		"rollup-plugin-svelte": "7.1.0",
		"rollup-plugin-terser": "7.0.2",
		"sirv-cli": "1.0.11",
		"start-server-and-test": "1.12.1",
		"svelte": "3.37.0",
		"svelte-check": "1.5.2",
		"svelte-preprocess": "4.7.2",
		"typescript": "4.2.4"
	},
	"files": [
		"src/components",
		"dist"
	],
	"lint-staged": {
		"*.{html, css, scss, stylus, js, ts, json, yml, md}": [
			"prettier --write",
			"git add"
		],
		"*.{js, svelte}": [
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"main": "dist/index.min.js",
	"module": "dist/index.min.mjs",
	"scripts": {
		"build": "rollup -c",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"dev": "rollup -c -w",
		"lint": "eslint --color --ignore-path .gitignore .",
		"prepublishOnly": "npm run build",
		"start": "sirv public",
		"test": "start-server-and-test dev http://localhost:5000 cy:run"
	},
	"svelte": "src/components/components.module.js"
}
